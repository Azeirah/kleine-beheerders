#ifdef __USE_CMSIS
#include "LPC13xx.h"
#include "leds.h"
#include "buttons.h"
#endif

#include <cr_section_macros.h>

int main(void) {
	initLeds();
	initButtons();

	uint8_t = lightsState = 0xFF;

    while(1) {
    	struct buttons bstate = readButtons();
    	advanceState(bstate);
    }
    return 0 ;
}
