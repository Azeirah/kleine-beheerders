#ifdef __USE_CMSIS
#include "LPC13xx.h"
#endif

#include <stdint.h>
#include "leds.h"
#include "buttons.h"

#include <cr_section_macros.h>

int main(void) {
	initLeds();
	initButtons();

	char lightsState = 0xFF;
	char rgb = 0x7;
	char direction = 1;
	char currentLed = 0;
	char buttons = readButtons();

    while(1) {
    	buttons = readButtons();
    	toggleRGB(buttons);
    	incrementLeds(direction, currentLed);
    	delay(2);
    }
    return 0 ;
}
